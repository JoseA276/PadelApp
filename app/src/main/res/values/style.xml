<resources>
    <!-- Estilo personalizado para CalendarView -->
    <style name="CustomCalendarView">
        <item name="android:weekDayTextAppearance">@style/CalendarView.WeekDayText</item>
        <item name="android:dateTextAppearance">@style/CalendarView.DateText</item>
        <item name="android:weekSeparatorLineColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CalendarView.WeekDayText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarView.DateText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarView"></style>
</resources>
